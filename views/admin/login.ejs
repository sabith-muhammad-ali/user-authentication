<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
    background-color: #f4f7f9;
  }

  h1 {
    text-align: center;
    color: #394867;
  }

  h3 {
    color: #e74c3c;
    text-align: center;
  }

  form {
    width: 50%;
    margin: 20px auto;
    text-align: center;
  }

  input {
    width: 100%;
    padding: 12px;
    margin: 8px 0;
    box-sizing: border-box;
    border: 1px solid #95a5a6;
    border-radius: 5px;
    font-size: 16px;
    display: block;
  }

  input[type="submit"] {
    background-color: #3498db;
    color: #fff;
    cursor: pointer;
    padding: 12px;
    display: block;
    width: 100%;
    border: none;
    border-radius: 5px;
    font-size: 16px;
  }

  input[type="submit"]:hover {
    background-color: #2980b9;
  }
</style>

